#include<stdio.h>
struct person
{
    int age;
    int ID;
    float weight;
};
int main(){
    struct person *personPtr, person1;
    personPtr = &person1;
    
    printf("Enter age: ");
    scanf("%d", &personPtr->age);
    printf("Enter ID: ");
    scanf("%d", &personPtr->ID);
    printf("Enter weight: ");
    scanf("%f", &personPtr->weight);
    
    printf("Displaying:\n ");
    printf("Age: %d\n ", personPtr->age);
    printf("ID: %d\n ", personPtr->ID);
    printf("Weight: %f\n", personPtr->weight);
    
    return 0;
}
