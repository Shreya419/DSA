#include<stdio.h>
struct student {
    char studentname[50];
    int roll;
    float marks;
};

int main(){
    struct student s;
    printf("Enter the details of the student: \n");
    
    //storing information
    printf("Enter the student name: \n");
    scanf("%s", s.studentname);
    
    printf("Enter the student roll no.: \n");
    scanf("%d", &s.roll);
    
    printf("Enter the student marks: \n");
    scanf("%f", &s.marks);
    
    //displaying information
    printf("Name: %s\n", s.studentname);
    printf("Name: %d\n", s.roll);
    printf("Name: %.2f\n", s.marks);
    
}
